{% extends 'layout.jinja' %}
{% block contents %}
<form role="form" action="{{url_for('simpleBBS.modifyPost', postSrl=modiPost['postSrl'])}}" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="input" class="form-control" id="Title" name="Title" value="{{modiPost['Title']}}" />
        <input type="hidden" id="postSrl" name="postSrl" value="{{modiPost['postSrl']}}">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Text(MarkDown Suported)</label>
        <textarea class="form-control" id="Text" name="Text" rows="10">{{modiPost['Text']}}</textarea>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
    <button type="reset" class="btn btn-danger">Reset</button>
</form>
{% endblock %}